<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_holo_light" >

    <TextView
        android:id="@+id/tv_animalname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/hblue"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_animalimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_animalname"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/str_iv_flag"
        android:padding="4dp" />

    <TextView
        android:id="@+id/tv_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_animalimage"
        android:padding="10dp"
        android:textColor="@color/hblue"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>